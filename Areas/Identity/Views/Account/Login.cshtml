﻿@using System.Collections.Generic;
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication;
@using App.Areas.Identity.Models.AccountViewModels
@model LoginViewModel;
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout  = "_LoginLayout.cshtml";
}
<style>
    .bg-login-image {
        background-image: url(https://haviweb.com.vn/wp-content/uploads/2018/11/web-2.0-la-gi.png);
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        background-color: black;
    }
</style>

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Đăng nhập!</h1>
                            </div>
                            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"  class="user">
                               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-user" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <hr />
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" class="custom-control-input">
                                        <label class="custom-control-label" asp-for="RememberMe">
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                <hr>
                            </form>
                            <hr>

                            <div class="text-center">
                                <h6>Chưa có tài khoản?</h6>
                                <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"> Đăng ký</a>
                            </div>
           


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
 

